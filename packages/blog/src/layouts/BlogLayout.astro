---
import type { RegionId } from '../lib/regions';
import { REGIONS, getRegionDomain } from '../lib/regions';
import SEOHead from '../components/SEOHead.astro';
import LocalBusinessSchema from '../components/LocalBusinessSchema.astro';

interface Props {
  title: string;
  description: string;
  region: RegionId;
  canonicalPath?: string;
  ogImage?: string;
  ogImageWidth?: number;
  ogImageHeight?: number;
  slug?: string;
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    tags?: string[];
  };
}

const { title, description, region, canonicalPath, ogImage, ogImageWidth, ogImageHeight, slug, article } = Astro.props;
const regionData = REGIONS[region];
const baseUrl = getRegionDomain(region);
const canonical = canonicalPath ? `${baseUrl}${canonicalPath}` : Astro.url.href;
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="alternate" type="application/rss+xml" title={`${regionData.name} ${regionData.keyword} 블로그 RSS`} href="/blog/rss.xml" />
    <SEOHead
      title={title}
      description={description}
      canonical={canonical}
      ogImage={ogImage}
      ogImageWidth={ogImageWidth}
      ogImageHeight={ogImageHeight}
      region={region}
      slug={slug}
      article={article}
    />
    <LocalBusinessSchema region={region} />
    <style is:global>
      :root {
        --color-primary: #1a1a2e;
        --color-secondary: #16213e;
        --color-accent: #e94560;
        --color-text: #eaeaea;
        --color-text-muted: #a0a0a0;
        --color-bg: #0f0f1a;
        --color-card: #1a1a2e;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.6;
      }

      body {
        min-height: 100vh;
      }

      a {
        color: #e94560;
        text-decoration: none;
      }

      a:hover {
        color: #e94560;
        text-decoration: underline;
      }

      img {
        max-width: 100%;
        height: auto;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <div class="header-container">
        <a href={`${baseUrl}/`} class="logo">
          {regionData.name} {regionData.keyword}
        </a>
        <nav class="nav">
          <a href={`${baseUrl}/`}>홈</a>
          <a href="/blog" class="active">블로그</a>
        </nav>
      </div>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-container">
        <p>&copy; {new Date().getFullYear()} {regionData.name} {regionData.keyword}. All rights reserved.</p>
        <nav class="footer-nav">
          <a href={`${baseUrl}/privacy`}>개인정보처리방침</a>
          <a href={`${baseUrl}/terms`}>이용약관</a>
        </nav>
      </div>
    </footer>

    <style>
      .header {
        background: var(--color-primary);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .header-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--color-text);
      }

      .logo:hover {
        text-decoration: none;
        color: var(--color-accent);
      }

      .nav {
        display: flex;
        gap: 1.5rem;
      }

      .nav a {
        color: var(--color-text-muted);
        font-weight: 500;
        transition: color 0.2s;
      }

      .nav a:hover,
      .nav a.active {
        color: var(--color-accent);
        text-decoration: none;
      }

      .main {
        min-height: calc(100vh - 200px);
      }

      .footer {
        background: var(--color-primary);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 2rem 0;
        margin-top: 4rem;
      }

      .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
      }

      .footer p {
        color: var(--color-text-muted);
        font-size: 0.875rem;
      }

      .footer-nav {
        display: flex;
        gap: 1.5rem;
      }

      .footer-nav a {
        color: var(--color-text-muted);
        font-size: 0.875rem;
      }

      @media (max-width: 640px) {
        .footer-container {
          flex-direction: column;
          text-align: center;
        }
      }
    </style>
  </body>
</html>
