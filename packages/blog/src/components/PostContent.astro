---
import { processContentLinks } from '../lib/content-processor';
import type { RegionId } from '../lib/regions';

interface Props {
  content: string;
  region?: RegionId;
}

const { content, region } = Astro.props;

// 지역이 제공되면 콘텐츠 내 키워드를 링크로 변환
const processedContent = region
  ? processContentLinks(content, region, 3)
  : content;
---

<div class="post-content" set:html={processedContent} />

<style>
  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .post-content :global(h3) {
    font-size: 1.4rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .post-content :global(h4) {
    font-size: 1.2rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    text-decoration: none;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  .post-content :global(code) {
    background: var(--color-secondary);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Fira Code', monospace;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    background: var(--color-secondary);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-content :global(img) {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
  }

  .post-content :global(th),
  .post-content :global(td) {
    padding: 0.75rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    text-align: left;
  }

  .post-content :global(th) {
    background: var(--color-secondary);
    font-weight: 600;
  }

  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 2rem 0;
  }

  /* 내부 링크 스타일 */
  .post-content :global(.content-internal-link) {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px dotted var(--color-accent);
    transition: all 0.2s ease;
  }

  .post-content :global(.content-internal-link:hover) {
    border-bottom-style: solid;
    opacity: 0.9;
  }
</style>
