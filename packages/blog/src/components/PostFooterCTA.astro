---
import { REGIONS, getRegionDomain, getServicePath } from '../lib/regions';
import type { RegionId } from '../lib/regions';

interface Props {
  region: RegionId;
}

const { region } = Astro.props;
const regionData = REGIONS[region];
const baseUrl = getRegionDomain(region);
const pricePath = getServicePath(region, 'price');
const beginnerPath = getServicePath(region, 'beginner');

// 통합 연락처 정보
const CONTACT_INFO = {
  phone: '010-2626-4833',
  kakaoLink: 'http://qr.kakao.com/talk/jMlvTnRecn1PgP4S9gqME2itU7g-',
  telegramLink: 'https://t.me/pbsewoo',
};

const phoneNumber = CONTACT_INFO.phone;
const kakaoLink = CONTACT_INFO.kakaoLink;
const telegramLink = CONTACT_INFO.telegramLink;
---

<aside class="post-footer-cta">
  <div class="cta-content">
    <h3 class="cta-title">
      {regionData.name} {regionData.keyword} 예약 안내
    </h3>
    <p class="cta-description">
      {regionData.name} 지역 최고의 {regionData.keyword}를 경험해보세요.
      VIP룸부터 프라이빗룸까지 다양한 서비스를 제공합니다.
    </p>

    <div class="cta-buttons">
      <a href={`tel:${phoneNumber.replace(/-/g, '')}`} class="cta-button cta-phone">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
        </svg>
        <span>전화 예약</span>
      </a>

      <a href={kakaoLink} target="_blank" rel="noopener noreferrer" class="cta-button cta-kakao">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 3c5.799 0 10.5 3.664 10.5 8.185 0 4.52-4.701 8.184-10.5 8.184a13.5 13.5 0 0 1-1.727-.11l-4.408 2.883c-.501.265-.678.236-.472-.413l.892-3.678c-2.88-1.46-4.785-3.99-4.785-6.866C1.5 6.665 6.201 3 12 3z"/>
        </svg>
        <span>카카오톡 문의</span>
      </a>

      <a href={telegramLink} target="_blank" rel="noopener noreferrer" class="cta-button cta-telegram">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
        </svg>
        <span>텔레그램 문의</span>
      </a>

      <a href={baseUrl} class="cta-button cta-site">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="2" y1="12" x2="22" y2="12"></line>
          <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
        </svg>
        <span>공식 사이트</span>
      </a>
    </div>

    <div class="cta-links">
      <span class="cta-links-title">바로가기</span>
      <nav class="cta-nav">
        <a href={`${baseUrl}/`}>{regionData.name} {regionData.keyword}</a>
        <a href={`${baseUrl}${pricePath}`}>가격 안내</a>
        <a href={`${baseUrl}${beginnerPath}`}>초보자 가이드</a>
      </nav>
    </div>
  </div>
</aside>

<style>
  .post-footer-cta {
    margin-top: 3rem;
    margin-bottom: 2rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(233, 69, 96, 0.1) 0%, rgba(233, 69, 96, 0.05) 100%);
    border-radius: 16px;
    border: 1px solid rgba(233, 69, 96, 0.2);
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .cta-description {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none !important;
    transition: all 0.2s ease;
  }

  .cta-phone {
    background: var(--color-accent);
    color: white !important;
  }

  .cta-phone:hover {
    background: #d13a52;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(233, 69, 96, 0.3);
  }

  .cta-kakao {
    background: #FEE500;
    color: #3C1E1E !important;
  }

  .cta-kakao:hover {
    background: #E6CF00;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 229, 0, 0.3);
  }

  .cta-telegram {
    background: #0088cc;
    color: white !important;
  }

  .cta-telegram:hover {
    background: #006699;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 136, 204, 0.3);
  }

  .cta-site {
    background: var(--color-secondary);
    color: var(--color-text) !important;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cta-site:hover {
    background: var(--color-primary);
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .cta-links {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cta-links-title {
    display: block;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem 1.5rem;
  }

  .cta-nav a {
    color: var(--color-text) !important;
    text-decoration: none !important;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .cta-nav a:hover {
    color: var(--color-accent) !important;
  }

  @media (max-width: 640px) {
    .post-footer-cta {
      padding: 1.5rem;
    }

    .cta-title {
      font-size: 1.25rem;
    }

    .cta-description {
      font-size: 0.9rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-button {
      justify-content: center;
      width: 100%;
    }

    .cta-nav {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>
