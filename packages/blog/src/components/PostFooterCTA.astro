---
import { REGIONS, getRegionDomain, getServicePath } from '../lib/regions';
import type { RegionId } from '../lib/regions';

interface Props {
  region: RegionId;
}

const { region } = Astro.props;
const regionData = REGIONS[region];
const baseUrl = getRegionDomain(region);
const pricePath = getServicePath(region, 'price');
const beginnerPath = getServicePath(region, 'beginner');

// 지역별 전화번호 매핑
const PHONE_NUMBERS: Record<RegionId, string> = {
  bundang: '010-5765-8553',
  suwon: '010-5765-8553',
  dongtan: '010-5765-8553',
  jengja: '010-5765-8553',
  ingedong: '010-5765-8553',
  gwanggyo: '010-5765-8553',
  yeongtong: '010-5765-8553',
};

// 카카오톡 ID 매핑
const KAKAO_IDS: Record<RegionId, string> = {
  bundang: 'abcd1234',
  suwon: 'abcd1234',
  dongtan: 'abcd1234',
  jengja: 'abcd1234',
  ingedong: 'abcd1234',
  gwanggyo: 'abcd1234',
  yeongtong: 'abcd1234',
};

const phoneNumber = PHONE_NUMBERS[region];
const kakaoId = KAKAO_IDS[region];
---

<aside class="post-footer-cta">
  <div class="cta-content">
    <h3 class="cta-title">
      {regionData.name} {regionData.keyword} 예약 안내
    </h3>
    <p class="cta-description">
      {regionData.name} 지역 최고의 {regionData.keyword}를 경험해보세요.
      VIP룸부터 프라이빗룸까지 다양한 서비스를 제공합니다.
    </p>

    <div class="cta-buttons">
      <a href={`tel:${phoneNumber.replace(/-/g, '')}`} class="cta-button cta-phone">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
        </svg>
        <span>전화 예약</span>
      </a>

      <a href={`https://open.kakao.com/o/${kakaoId}`} target="_blank" rel="noopener noreferrer" class="cta-button cta-kakao">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 3c5.799 0 10.5 3.664 10.5 8.185 0 4.52-4.701 8.184-10.5 8.184a13.5 13.5 0 0 1-1.727-.11l-4.408 2.883c-.501.265-.678.236-.472-.413l.892-3.678c-2.88-1.46-4.785-3.99-4.785-6.866C1.5 6.665 6.201 3 12 3z"/>
        </svg>
        <span>카카오톡 문의</span>
      </a>

      <a href={baseUrl} class="cta-button cta-site">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="2" y1="12" x2="22" y2="12"></line>
          <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
        </svg>
        <span>공식 사이트</span>
      </a>
    </div>

    <div class="cta-links">
      <span class="cta-links-title">바로가기</span>
      <nav class="cta-nav">
        <a href={`${baseUrl}/`}>{regionData.name} {regionData.keyword}</a>
        <a href={`${baseUrl}${pricePath}`}>가격 안내</a>
        <a href={`${baseUrl}${beginnerPath}`}>초보자 가이드</a>
      </nav>
    </div>
  </div>
</aside>

<style>
  .post-footer-cta {
    margin-top: 3rem;
    margin-bottom: 2rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(233, 69, 96, 0.1) 0%, rgba(233, 69, 96, 0.05) 100%);
    border-radius: 16px;
    border: 1px solid rgba(233, 69, 96, 0.2);
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .cta-description {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none !important;
    transition: all 0.2s ease;
  }

  .cta-phone {
    background: var(--color-accent);
    color: white !important;
  }

  .cta-phone:hover {
    background: #d13a52;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(233, 69, 96, 0.3);
  }

  .cta-kakao {
    background: #FEE500;
    color: #3C1E1E !important;
  }

  .cta-kakao:hover {
    background: #E6CF00;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 229, 0, 0.3);
  }

  .cta-site {
    background: var(--color-secondary);
    color: var(--color-text) !important;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cta-site:hover {
    background: var(--color-primary);
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .cta-links {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cta-links-title {
    display: block;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem 1.5rem;
  }

  .cta-nav a {
    color: var(--color-text) !important;
    text-decoration: none !important;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .cta-nav a:hover {
    color: var(--color-accent) !important;
  }

  @media (max-width: 640px) {
    .post-footer-cta {
      padding: 1.5rem;
    }

    .cta-title {
      font-size: 1.25rem;
    }

    .cta-description {
      font-size: 0.9rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-button {
      justify-content: center;
      width: 100%;
    }

    .cta-nav {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>
