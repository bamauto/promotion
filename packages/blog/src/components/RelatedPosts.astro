---
import type { RegionId } from '../lib/regions';
import type { PostListItem } from '../lib/posts';

interface Props {
  posts: PostListItem[];
  region: RegionId;
}

const { posts, region } = Astro.props;
---

{posts.length > 0 && (
  <section class="related-posts">
    <h2>관련 글</h2>
    <div class="related-grid">
      {posts.map((post) => (
        <a href={`/${region}/${post.slug}/`} class="related-card">
          <h3>{post.title}</h3>
          {post.excerpt && <p>{post.excerpt}</p>}
        </a>
      ))}
    </div>
  </section>
)}

<style>
  .related-posts {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .related-posts h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .related-card {
    display: block;
    background: var(--color-card);
    padding: 1.5rem;
    border-radius: 8px;
    color: var(--color-text);
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .related-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    text-decoration: none;
  }

  .related-card h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .related-card p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
