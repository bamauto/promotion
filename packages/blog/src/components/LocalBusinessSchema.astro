const info = businessInfo[region];

const schema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': `${baseUrl}/#localbusiness`,
  name: `${regionData.name} ${regionData.keyword}`,
  description: regionData.description,
  url: baseUrl,
  address: {
    '@type': 'PostalAddress',
    addressLocality: info.address,
    addressRegion: '경기도',
    addressCountry: 'KR'
